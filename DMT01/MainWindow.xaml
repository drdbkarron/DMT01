<Window
    x:Class="DMT01.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ReoGrid="clr-namespace:unvell.ReoGrid;assembly=unvell.ReoGrid"
    xmlns:WPF="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:local="clr-namespace:DMT01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DMTWindow"
    Title="MainWindow"
    Width="1003"
    Height="600"
    Margin="0"
    Padding="3"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    HorizontalContentAlignment="Center"
    VerticalContentAlignment="Center"
    Background="#FF5D7C75"
    BorderBrush="#FFDE0A0A"
    BorderThickness="3"
    ScrollViewer.CanContentScroll="True"
    ScrollViewer.HorizontalScrollBarVisibility="Visible"
    UseLayoutRounding="True"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">
    <StackPanel
        x:Name="TopStackPanel"
        Width="974"
        Height="549"
        Margin="1,1,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#FFE2DECD"
        CanHorizontallyScroll="True"
        CanVerticallyScroll="True"
        Orientation="Vertical"
        ScrollViewer.HorizontalScrollBarVisibility="Visible"
        UseLayoutRounding="True">
        <StackPanel
            Width="961"
            Height="312"
            Margin="0,7,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="2"
            Background="#FFAB79B6"
            Orientation="Horizontal">
            <ReoGrid:ReoGridControl
                x:Name="myReoGridControl"
                Width="809"
                Margin="-176,-113,-175,-111"
                HorizontalAlignment="Left"
                Loaded="myReoGridControl_Loaded"
                RenderTransformOrigin="0.5,0.5"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Visible">
                <ReoGrid:ReoGridControl.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.55" ScaleY="0.55" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </ReoGrid:ReoGridControl.RenderTransform>
            </ReoGrid:ReoGridControl>
            <WPF:OpenGLControl
                x:Name="myOpenGLControl"
                Width="504"
                Height="302"
                Margin="-7,1,1,0"
                Padding="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                BorderThickness="3,3,2,2"
                IsHitTestVisible="False"
                Loaded="myOpenGLControl_Loaded"
                OpenGLVersion="OpenGL2_0"
                RenderTransformOrigin="0.375,0.493"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                TabIndex="2147483644" OpenGLDraw="myOpenGLControl_OpenGLDraw" OpenGLInitialized="myOpenGLControl_OpenGLInitialized" Resized="myOpenGLControl_Resized" />
        </StackPanel>
        <StackPanel
            x:Name="BottomStackPanel"
            Width="942"
            Height="210"
            Margin="22,10,0,16"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#FF1A319B"
            Orientation="Horizontal">
            <TabControl
                Width="927"
                Height="195"
                Margin="3,7,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFF1F1C6">
                <TabItem Header="TabItem">
                    <Grid
                        Width="24"
                        Margin="6,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#FFC1DC47" />
                </TabItem>
                <TabItem Header="Spreadsheet Load file">
                    <Grid
                        Width="793"
                        Height="143"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#FFC1DC47">
                        <DockPanel
                            Width="777"
                            Height="93"
                            Margin="6,0,0,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#FF393E47">
                            <TextBlock
                                Width="743"
                                Height="21"
                                Margin="10,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#FF3B9393"
                                DockPanel.Dock="Top"
                                TextAlignment="Center"
                                TextWrapping="Wrap">
                                <Run>
                                    Spreadsheet File Name
                                </Run>
                            </TextBlock>
                            <RichTextBox
                                x:Name="SpreadsheetDirPath_RichTextBox"
                                Width="743"
                                Height="23"
                                Margin="10,0,0,4"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                VerticalContentAlignment="Bottom"
                                Background="#FF975959"
                                DockPanel.Dock="Bottom" 
                                TextChanged="SpreadsheetDirPath_RichTextBox_TextChanged">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run>C:\Users\karro\Downloads\Downloads\2018-00-00\2018-02-00</Run>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <RichTextBox
                                x:Name="SpreadsheetFileName_RichTextBox"
                                Width="743"
                                Height="24"
                                Margin="10,0,0,4"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                VerticalContentAlignment="Bottom"
                                Background="#FFF0EB87"
                                DockPanel.Dock="Bottom" TextChanged="SpreadsheetFileName_RichTextBox_TextChanged">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run>UNEP_NATDIS_disasters_2002_2010.xlsx</Run>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </DockPanel>
                        <Button x:Name="spreadsheet_load_Button" Margin="6,10,621,108" Content="load spreadsheet" />
                        <Button x:Name="Button2"
                            Width="96"
                            Margin="177,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Button" Height="25" />
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </StackPanel>
</Window>
