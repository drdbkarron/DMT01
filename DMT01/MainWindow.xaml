                                <Run>
                                    Spreadsheet File Name
                                </Run>
                            </TextBlock>
                            <RichTextBox
                                x:Name="SpreadsheetDirPath_RichTextBox"
                                Width="743"
                                Height="23"
                                Margin="10,0,0,4"
                                Padding="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                VerticalContentAlignment="Bottom"
                                Background="#FF975959"
                                DockPanel.Dock="Bottom">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run>C:\Users\karro\Downloads\Downloads\2018-00-00\2018-02-00</Run>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                            <RichTextBox
                                x:Name="SpreadsheetFileName_RichTextBox"
                                Width="743"
