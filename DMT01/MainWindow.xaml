                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#FFC1DC47">
                        <DockPanel
                            Width="777"
                            Height="93"
                            Margin="6,0,0,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#FF393E47">
                            <TextBlock
                                Width="743"
                                Height="21"
                                Margin="10,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="#FF3B9393"
                                DockPanel.Dock="Top"
                                TextAlignment="Center"
